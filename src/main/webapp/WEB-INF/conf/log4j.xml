<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="false"
                     xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss,SSS}- %m%n"/>
        </layout>
    </appender>

    <appender name="error" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="../logs/ad_vert_error.log" />
        <param name="Threshold" value="error" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %-5p %c{1} - %m%n" />
        </layout>
    </appender>

    <appender name="debug" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="../logs/ad_vert_debug.log" />
        <param name="Threshold" value="trace" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %-5p %c{1} %x %X{ID}-[%t]- %m%n" />
        </layout>
    </appender>

    <appender name="trace" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="../logs/ad_vert_trace.log" />
        <param name="Threshold" value="trace" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{DATE} %-5p %c{1} %x %X{ID}-[%t]- %m%n" />
        </layout>
    </appender>

    <category name="org" additivity="false">
        <priority value="error" />
        <appender-ref ref="error" />
    </category>

    <category name="org.hibernate" additivity="false">
        <priority value="error" />
        <appender-ref ref="error" />
    </category>

    <category name="org.springframework" additivity="false">
        <priority value="error" />
    </category>

    <root>
        <appender-ref ref="debug"/>
        <appender-ref ref="error"/>
        <appender-ref ref="trace"/>
        <appender-ref ref="console"/>
    </root>

</log4j:configuration>
